<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="commrhardman23.httpsgithub.towersofhanoi.SolveTowers">

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/edtxtDiskNumber"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:hint="How Many Disks are on the Towers of Hanoi?"
        android:textSize="14sp"
        android:gravity="center_horizontal" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Solve Puzzle"
        android:id="@+id/btnSolvePuzzle"
        android:layout_below="@+id/edtxtDiskNumber"
        android:layout_centerHorizontal="true"
        android:onClick="solveTowersPuzzle" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txtvwSolution"
        android:layout_below="@+id/btnSolvePuzzle"
        android:layout_centerHorizontal="true"
        android:hint="The solution will be posted here!"
        android:textSize="10sp" />
</RelativeLayout>
